<div class="container">
    <center>
      <div class="row">

        <div class="col-md-6 col-md-offset-3">
          <!-- Nav tabs -->
          <div class="card">
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">User</a></li>
              <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
              <% if ( user.companyid === null ) { %>
              <div id="create-company-profile"><a class="btn btn-danger navbar-btn" href="/company/new">Create Company Profile</a></div>
        		<% } %>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active text-left" id="home">
                <h4>Role:  <mark><%=user.role%></mark></h4>
                <h4>Name:  <mark><%=user.name%></mark></h4>
                <h4>Username:  <mark><%=user.username%></mark></h4>
                <h4>Password:  <mark>Hidden for Protection</mark></h4>
                <h4>Nationality:  <mark><%=user.nationality%></mark></h4>
              </div>

              <div role="tabpanel" class="tab-pane" id="settings">
                <div id="edit-user-profile"><a class="btn btn-default navbar-btn" href="/<%=user._id%>/edit">Edit User Profile</a></div>
                      <h4>Test:  <mark><%=user.companyid%></mark></h4>
                <div id="edit-company-profile"><a class="btn btn-default navbar-btn" href="/company/<%=user.companyid%>/edit">Edit Company Profile</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </center>
</div>
